<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gallery_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical|center_horizontal"
    android:cacheColorHint="#00000000"
    android:clickable="false"
    android:duplicateParentState="false"
    android:longClickable="false"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/linearLayout_topMenu_row2"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical|center_horizontal|center"
        android:orientation="horizontal" >

        <HorizontalScrollView
            android:id="@+id/scrollView_topMenu_row2"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.14"
            android:fadingEdge="none"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/menu_categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/search_layout"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="0.03"
            android:gravity="right" >

            <ImageButton
                android:id="@+id/button_topMenu_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.14"
                android:background="@drawable/search_button"
                android:shadowRadius="0" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item_notfound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="NO ITEMS ADDED FOR THIS CATEGORY"
        android:textColor="#565350"
        android:textSize="9dp"
        android:visibility="invisible" />

    <com.orient.profresh.CustomGalleryView
        android:id="@+id/mygallery"
        style="@android:color/transparent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:background="@android:color/transparent"
        android:cacheColorHint="#00000000"
        android:duplicateParentState="false"
        android:focusableInTouchMode="true"
        android:paddingTop="9dp"
        android:spacing="18dp"
        android:visibility="visible" />

</LinearLayout>